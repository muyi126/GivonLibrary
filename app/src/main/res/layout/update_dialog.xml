<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tool="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:background="#fff"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="5dp"
            card_view:contentPadding="0dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                    android:id="@+id/ly_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dip"
                        android:textColor="#2f98e9"
                        android:textSize="18sp"/>

                <View
                        style="@style/lineStyle"/>
            </LinearLayout>

            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff">
                <LinearLayout android:layout_width="match_parent"
                              android:orientation="vertical"
                              android:minHeight="200dip"
                              android:layout_height="wrap_content"
                >
                    <com.base.givon.demo.common.widget.TextDescribeBodyView
                            android:id="@+id/tv_version_name"
                            app:giv_db_describeText_size="14sp"
                            android:layout_width="match_parent"
                            android:textColor="@android:color/black"
                            app:giv_db_describeText_color="@android:color/black"
                            app:giv_db_describeText_padding_left="16dip"
                            app:giv_db_describeText="最新版本:"
                            tool:text="1.1.0"
                            android:gravity="center_vertical"
                            android:layout_height="30dip"/>

                    <com.base.givon.demo.common.widget.TextDescribeBodyView
                            android:id="@+id/tv_version_size"
                            app:giv_db_describeText_size="14sp"
                            android:layout_width="match_parent"
                            android:textColor="@android:color/black"
                            app:giv_db_describeText_color="@android:color/black"
                            app:giv_db_describeText_padding_left="16dip"
                            app:giv_db_describeText="最新版本大小:"
                            android:gravity="center_vertical"
                            tool:text="12M"
                            android:layout_height="30dip"/>
                    <TextView
                            android:id="@+id/tv_content"
                            android:layout_width="match_parent"
                            android:layout_height="100dip"
                            android:gravity="center"
                            android:paddingBottom="10dip"
                            android:paddingLeft="15dip"
                            android:paddingRight="15dip"
                            android:paddingTop="15dip"
                            tool:text="asdasdasd"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"/>

                </LinearLayout>


            </ScrollView>

            <View
                    style="@style/lineStyle"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:orientation="horizontal">

                <com.rey.material.widget.TextView
                        android:id="@+id/tv_cancel"
                        style="@style/LightRaiseWaveButtonRippleStyle_Black"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:gravity="center"
                        android:text="@string/cancle"
                        android:textColor="#9B9B9B"
                        android:textSize="@dimen/base_textsize_s"/>

                <View
                        android:id="@+id/line"
                        style="@style/lineStyle"
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                />

                <com.rey.material.widget.TextView
                        android:id="@+id/tv_sure"
                        style="@style/LightRaiseWaveButtonRippleStyle_Black"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:gravity="center"
                        android:text="@string/ok"
                        android:textColor="#2f98e9"
                        android:textSize="@dimen/base_textsize_s"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>